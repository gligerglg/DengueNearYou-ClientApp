<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_location"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:text="Status"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/txt_status"
            android:layout_below="@+id/txt_status"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/patient_icon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/img_patient"
            android:layout_alignTop="@id/txt_status"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Patients" />

        <TextView
            android:id="@+id/txt_patients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/risk"
            android:layout_toEndOf="@+id/textView6"
            android:text="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/img_patient"
            android:layout_below="@+id/img_patient"
            android:layout_marginTop="5dp"
            android:src="@drawable/dead_icon"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Deaths" />

        <TextView
            android:id="@+id/txt_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_patients"
            android:layout_alignTop="@+id/textView8"
            android:text="0"
            android:textColor="@color/risk"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:text="Risk Level" />

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:maxHeight="20dp"
            android:minHeight="20dp" />
    </RelativeLayout>
</LinearLayout>